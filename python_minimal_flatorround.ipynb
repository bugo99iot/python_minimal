    "import time, threading\n",
    "from random import randint\n",
    "\n",
    "def repeat():\n",
    "    n = randint(1,2)\n",
    "    if n == 1:\n",
    "        print(\"The world is round!\")\n",
    "    else:\n",
    "        print(\"The world is flat!\")\n",
    "    threading.Timer(1, repeat).start()\n",
    "\n",
    "repeat()"
